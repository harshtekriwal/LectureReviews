<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".WelcomeTeacher">

    <TextView
        android:id="@+id/teacher_welcome"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="Welcome Teacher"
        android:textSize="36sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="174dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/welcomestudteach" />

    <Button
        android:id="@+id/take_review"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="193dp"
        android:layout_height="59dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_rounded"
        android:text="@string/takereview" />

    <Button
        android:id="@+id/ratings"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="61dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rounded"
        android:text="@string/checkoutratings" />

</LinearLayout>